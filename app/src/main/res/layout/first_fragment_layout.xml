<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/firstfragment_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#8672a3"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/firstfragment_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/app_logo2"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="3dp"

            >
            <TextView
                android:id="@+id/songAlter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="歌手"
                android:textColor="#00ff6f"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/songName"
                android:layout_marginTop="5dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="歌名歌名歌名歌名歌名歌名歌名歌名歌名"
                android:textColor="#00ff6f"
                android:textSize="15dp"
                android:lines="1"
                android:ellipsize="end"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="180dp"
            >
            <ImageView
                android:id="@+id/image1"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/upsong"
                />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/stopsong"
                />
            <ImageView
                android:id="@+id/image3"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nextsong"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
